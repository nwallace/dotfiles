#!/bin/bash

old_ip="$(grep 'Me:' ~/ip-addresses.note | cut -d ' ' -f 2)"
current_ip="$(curl -s ipv4.icanhazip.com)"
red="$(tput setaf 1)"
green="$(tput setaf 2)"
reset="$(tput sgr0)"

if [[ "$old_ip" == "$current_ip" ]]; then
  echo "${green}âœ“${reset} IP is still ${green}${current_ip}${reset}"
else
  echo -e "${red}âœ—${reset} IP has changed!\n  Was: ${red}${old_ip}${reset}\n  Is:  ${green}${current_ip}${reset}"
fi
