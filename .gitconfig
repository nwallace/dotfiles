[user]
  name = Nathan Wallace
  email = nathan.m.wallace@gmail.com
[color]
  ui = auto
[core]
  editor = vim
  autocrlf = input
  pager = less -F -X
[push]
  default = upstream
[alias]
  aa = add --all
  az = archive --format zip --output
  ci = commit
  cm = commit -m
  ca = commit --amend
  co = checkout
  di = diff
  dc = diff --cached
  ds = diff --stat
  lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  st = status
  unstage = reset HEAD
